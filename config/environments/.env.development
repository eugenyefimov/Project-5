# Development Environment Configuration
# Project-5 Multi-Cloud Infrastructure

# Application Settings
NODE_ENV=development
PORT=3000
API_PORT=3001
USER_SERVICE_PORT=3002

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project5_development
DB_USER=project5_dev
DB_PASSWORD=dev_password_123
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_CLUSTER=false

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# Security Settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=dev_csrf_secret

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/development.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring and Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Docker Registry
DOCKER_REGISTRY=localhost:5000
DOCKER_NAMESPACE=project5
DOCKER_TAG=latest

# Kubernetes Configuration
KUBE_NAMESPACE=project5-dev
KUBE_CONFIG_PATH=~/.kube/config
KUBE_CONTEXT=kind-project5-dev

# Cloud Provider Settings
# AWS
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=project5-dev-storage
AWS_CLOUDWATCH_ENABLED=false

# Azure
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_RESOURCE_GROUP=project5-dev-rg
AZURE_LOCATION=westus2
AZURE_STORAGE_ACCOUNT=project5devstorage

# Google Cloud Platform
GCP_PROJECT_ID=
GCP_REGION=us-west1
GCP_ZONE=us-west1-a
GCP_SERVICE_ACCOUNT_KEY=
GCP_STORAGE_BUCKET=project5-dev-storage

# External Services
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_SSL=false

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@project5.local

# Feature Flags
FEATURE_DEBUG_MODE=true
FEATURE_VERBOSE_LOGGING=true
FEATURE_MOCK_EXTERNAL_SERVICES=true
FEATURE_RATE_LIMITING=false
FEATURE_CACHING=true
FEATURE_METRICS_COLLECTION=true

# Development Tools
HOT_RELOAD=true
WATCH_FILES=true
AUTO_RESTART=true
DEBUG_PORT=9229

# Testing Configuration
TEST_DB_NAME=project5_test
TEST_REDIS_DB=1
TEST_TIMEOUT=30000
TEST_PARALLEL=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
SWAGGER_ENABLED=true

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DEST=./uploads

# Session Configuration
SESSION_SECRET=dev_session_secret
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000
CACHE_CHECK_PERIOD=600

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=./backups

# Development Specific
DEV_SEED_DATA=true
DEV_RESET_DB=false
DEV_MOCK_PAYMENTS=true
DEV_SKIP_EMAIL_VERIFICATION=true